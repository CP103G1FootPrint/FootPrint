<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/landMarkImageInfoProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/landMarkImageInfoItemUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinky"
        android:textSize="30sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/landMarkImageInfoProfilePicture"
        app:layout_constraintStart_toEndOf="@id/landMarkImageInfoProfilePicture"
        app:layout_constraintBottom_toBottomOf="@id/landMarkImageInfoProfilePicture"/>

    <ImageView
        android:id="@+id/landMarkImageInfoItem"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/pictureloading"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/landMarkImageInfoProfilePicture"
        app:layout_constraintStart_toStartOf="parent"/>



</android.support.constraint.ConstraintLayout>

