<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_profile＿picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile_picture_pinky"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tv_news_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinky"
        android:textSize="30dp"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@id/ci_profile＿picture"
        app:layout_constraintBottom_toBottomOf="@id/ci_profile＿picture"
        app:layout_constraintTop_toTopOf="@id/ci_profile＿picture"/>
    <TextView
        android:id="@+id/tv_news_landmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taipei"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/tv_news_userName"
        app:layout_constraintBottom_toBottomOf="@id/tv_news_userName" />
    <ImageView
        android:id="@+id/iv_news_picture"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/home_news_picture"
        app:layout_constraintTop_toBottomOf="@id/ci_profile＿picture"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ib_news_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/home_news_like_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_news_picture"
        app:layout_constraintStart_toStartOf="@id/ci_profile＿picture"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="308dp" />

    <ImageButton
        android:id="@+id/ib_news_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/home_news_message"
        app:layout_constraintStart_toEndOf="@id/ib_news_like"
        app:layout_constraintTop_toBottomOf="@id/iv_news_picture"
        android:background="@color/colortextWhite"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="308dp" />

    <ImageButton
        android:id="@+id/ib_news_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/home_news_collection"
        app:layout_constraintStart_toEndOf="@id/ib_news_message"
        app:layout_constraintTop_toBottomOf="@id/iv_news_picture"
        android:background="@color/colortextWhite"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="308dp" />


</android.support.constraint.ConstraintLayout>