<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/shAlbumImgConfirm"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/shAlbumShareBt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="shareOnClick"
            android:textColor="@color/colortextWhite"
            android:background="@drawable/style_button"
            android:text="@string/textShare"/>
        <Button
            android:id="@+id/shAlbumCancelBt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/colortextWhite"
            android:background="@drawable/style_button"
            android:onClick="insertCancelOnClick"
            android:text="@string/textCancel"/>

    </LinearLayout>

</LinearLayout>