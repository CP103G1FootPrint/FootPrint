<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Schedule.SchedulePlanDayFragment">

    <!-- TODO: Update blank fragment layout -->


        <android.support.v7.widget.RecyclerView
            android:id="@+id/planRecycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/planCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/landMarkAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:src="@drawable/location"
            app:elevation="6dp"
            android:backgroundTint="@color/colorToolbar"
            app:rippleColor="#FFFFFF" /> //elevation高度陰影
    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>

