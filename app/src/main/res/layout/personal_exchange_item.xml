<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/personal_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="冰美式"
                android:textSize="30dp"
                app:layout_constraintStart_toEndOf="@id/personal_pic"
                app:layout_constraintTop_toTopOf="@+id/persona_pic" />

            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Ponits 30"
                android:textSize="25dp"
                app:layout_constraintEnd_toStartOf="@+id/piggy" />


            <ImageView
                android:id="@+id/piggy"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_piggy_bank_with_dollar_coins" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

