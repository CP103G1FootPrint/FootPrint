<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    tools:context=".HomeStroke.HomeStrokeFragment"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="188dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/stroke_ImgView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sh_mountaine" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/stroke_TvDate"
                android:scaleType="centerCrop"
                android:src="@drawable/backgrounddd" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/stroke_CiUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@id/stroke_TvDate"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="38dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/stroke_TvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/stroke_CiUser"
                android:layout_marginLeft="-285dp"
                android:layout_marginBottom="-52dp"
                android:layout_toRightOf="@id/stroke_ImgView"
                android:text="@string/UserName"
                android:textColor="@color/colortextWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stroke_TvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stroke_ImgView"
                android:layout_marginLeft="4dp"
                android:text="@string/textTripName"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stroke_TvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stroke_ImgView"
                android:layout_alignRight="@+id/stroke_ImgView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:text="@string/textDate"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

