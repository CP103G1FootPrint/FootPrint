<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    tools:context=".HomeStroke.HomeStrokeFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/stroke_ImgView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/sh_mountaine" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/stroke_TvDate"
                android:src="@drawable/backgrounddd" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/stroke_CiUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@id/stroke_TvDate"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="38dp"
                android:src="@drawable/profile_picture_cockroach" />

            <TextView
                android:id="@+id/stroke_TvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/stroke_CiUser"
                android:layout_marginLeft="-180dp"
                android:layout_marginBottom="-51dp"
                android:layout_toRightOf="@id/stroke_IvMessage"
                android:text="@string/UserName"
                android:textColor="@color/colortextWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stroke_TvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/stroke_TvDate"
                android:layout_marginLeft="10dp"
                android:text="@string/textTripName"
                android:textColor="@color/colortextWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stroke_TvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/stroke_ImgView"
                android:layout_marginLeft="10dp"
                android:text="@string/textDate"
                android:textColor="@color/colortextWhite"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/stroke_IvLike"
                android:layout_width="120dp"
                android:layout_height="28dp"
                android:layout_below="@id/stroke_ImgView"
                android:src="@drawable/home_news_like_icon" />

            <ImageView
                android:id="@+id/stroke_IvMessage"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/stroke_ImgView"
                android:layout_toRightOf="@id/stroke_IvLike"
                android:src="@drawable/home_news_message"/>

            <ImageView
                android:id="@+id/stroke_IvCollection"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/stroke_IvMessage"
                android:layout_below="@id/stroke_ImgView"
                android:src="@drawable/home_news_collection_black"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>