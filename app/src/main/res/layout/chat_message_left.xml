<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="6dp">


    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/ci_profileï¼¿picture"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_margin="4dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:src="@drawable/profile_picture_pinky" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatMessage_picture"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/profile_picture_pinky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:text="Test"
        android:textColor="#990000"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/chatMessage_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:angle="5.5dp"
        android:padding="2dp"
        app:arrowWidth="8dp"
        app:arrowLocation="left"
        app:arrowPosition="13dp"
        android:text="Test"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/chatMessage_picture"
        app:layout_constraintTop_toBottomOf="@id/textViewUserName"
        android:textSize="20sp"
        app:bubbleColor="#35D0B1"/>
</android.support.constraint.ConstraintLayout>



