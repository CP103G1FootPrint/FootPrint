<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tvLoginTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <Button
        android:id="@+id/loginTermsConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTermsConfirmClick"
        android:text="@string/textTerms"
        android:layout_gravity="bottom" />

    <Button
        android:id="@+id/loginTermsCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTermsCancelClick"
        android:text="@string/textCancel"/>

</LinearLayout>