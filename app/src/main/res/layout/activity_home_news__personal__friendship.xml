<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".HomeNews.HomeNewsActivity_Personal_Friendship">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendship_cvProfilePicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pictureloading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFriendship_UserName"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friendship_cvProfilePicture" />

    <EditText
        android:id="@+id/etFriendship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFriendship_UserName"
        android:hint="Say something"
        android:gravity="center"
        android:textSize="12dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:background="@color/colorWhite"
        android:text="加為好友"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFriendship"/>
</android.support.constraint.ConstraintLayout>